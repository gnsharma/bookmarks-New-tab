{
    "manifest_version": 2,
    "name": "book-tabs",
    "version": "1.1",

    "chrome_url_overrides": {
        "newtab": "my-new-tab.html"
    },

    "permissions": [
        "bookmarks"
    ],

    "description": "Replaces new tab page with a custom page which shows your bookmarks",

    "icons": {
        "48": "icons/border-48.png"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["book.js"]
        }
    ] 
}
